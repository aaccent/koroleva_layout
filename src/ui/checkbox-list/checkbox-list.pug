include layout/utils

mixin checkbox-list(props)
    -
        props = Object.assign({
            name: '',
            list: [''],
        }, props || {})

    ul.checkbox-list
        each item in props.list
            li: label.checkbox-list__item-label.checkbox
                input.checkbox-list__item-input.checkbox__input(type='checkbox', name='name')
                | #{ item }
