include layout/utils

mixin breadcrumbs(list)
    nav.breadcrumbs: .container
        ul.breadcrumbs__list
            li.breadcrumbs__list-item: +anchor('/') Главная
            each item, index in list
                if index === list.length - 1
                    li.breadcrumbs__list-item: span= item
                else
                    li.breadcrumbs__list-item: +anchor= item
