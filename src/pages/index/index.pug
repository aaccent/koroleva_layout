extends layout/page
include ui/slider/slider

block append head
    link(href=require('./main-page.styles.scss'), rel='stylesheet')

block append main
    include components/main-hero/main-hero
    include components/categories-list/categories
    +slider({title: 'Новинки', cards: 'product-card', tag: 'new', className: 'new-items'})
    +slider({title: 'Хиты продаж', cards: 'product-card', tag: 'best', className: 'hits'})
    +slider({title: 'Полезные статьи', cards:'article-card', className: 'articles'})

block append scripts
    script(src=require('./main-page.ts'))
