doctype html
html(lang='ru')
    head
        block head
            title #{ title }
            meta(name='viewport', content='width=device-width, initial-scale=1.0')
            meta(charset='UTF-8')

            link(href=require('styles/styles.scss'), rel='stylesheet')
    body
        include header/header

        .main-wrapper
            main.main
                block main
                block popups

            include footer/footer
            include ui/popups/fast-cart/fast-cart
            include ui/popups/size-subscription/size-subscription

        block scripts
            script(src=require('scripts/main.ts'), type='module')
            script(src=require('layout/header/header.ts'), type='module')
            script(src=require('layout/footer/footer.ts'), type='module')
